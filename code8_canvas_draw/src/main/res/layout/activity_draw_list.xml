<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/textview_button"
                android:onClick="onClip"
                android:text="0、clip（裁剪）" />

            <TextView
                style="@style/textview_button"
                android:onClick="onCircle"
                android:text="1、circle（圆）" />

            <TextView
                style="@style/textview_button"
                android:onClick="onOval"
                android:text="2、oval（椭圆）" />

            <TextView
                style="@style/textview_button"
                android:onClick="onLine"
                android:text="3、line（线）" />

            <TextView
                style="@style/textview_button"
                android:onClick="onArc"
                android:text="4、arc（弧）" />

            <TextView
                style="@style/textview_button"
                android:onClick="onPoint"
                android:text="5、point(点)" />

            <TextView
                style="@style/textview_button"
                android:onClick="onRect"
                android:text="6、rect(矩形)" />

            <TextView
                style="@style/textview_button"
                android:onClick="onPathText"
                android:text="7、pathText(路径绘字)" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>