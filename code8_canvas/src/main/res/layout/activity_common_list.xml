<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/textview_button"
                android:onClick="onClip"
                android:text="clip（裁剪）" />

            <TextView
                style="@style/textview_button"
                android:onClick="onCircle"
                android:text="circle（圆）" />

            <TextView
                style="@style/textview_button"
                android:onClick="onOval"
                android:text="oval（椭圆）" />

            <TextView
                style="@style/textview_button"
                android:onClick="onLine"
                android:text="line（线）" />

            <TextView
                style="@style/textview_button"
                android:onClick="onArc"
                android:text="arc（弧）" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>