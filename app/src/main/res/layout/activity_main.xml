<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/lsn_2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="2讲：定义ui流程" />

            <Button
                android:id="@+id/lsn_3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="3讲：paint使用（gradient、shader）" />

            <Button
                android:id="@+id/lsn_4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="4讲：paint使用（滤色、xfermode）" />

            <Button
                android:id="@+id/lsn_5"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="5讲：canvas（save、restore、layer）" />

            <Button
                android:id="@+id/lsn_6"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="6讲：drawable的level、gravity" />

            <Button
                android:id="@+id/lsn_7"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="7讲：贝塞尔曲线" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
